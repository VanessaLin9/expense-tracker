<div class="container">

  <div class="d-flex justify-content-center">

    <form action="/">
      <select class="form-select" name="filter" id="filter" onchange="submit()" aria-label="Default select">
        <option value="" selected>全部類別</option>
        <option value="home">家居物業</option>
        <option value="shuttle">交通出行</option>
        <option value="entertain">休閒娛樂</option>
        <option value="food">餐飲食品</option>
        <option value="other">其他</option>
      </select>
    </form>

  </div>

  <div class="d-flex justify-content-center m-2">
    <h1>總金額:</h1>
    <h1>{{totalAmount}}</h1>
  </div>

  <div class="d-flex justify-content-center">
    <table class="table table-striped table-borderless">
      <thead>
        <tr>
          <th scope="col" class="invisible">First</th>
          <th scope="col" class="invisible">Last</th>
          <th scope="col" class="invisible">Handle</th>
        </tr>
      </thead>

      <tbody>

        {{#each records}}
        <tr>
          {{!-- <th scope="row">1</th> --}}
          <td class="align-middle">
            {{!-- <i class="fas fa-home"></i> --}}
            <i class="{{this.category.icon}}"></i>
          </td>

          <td>
            <div class="font-weight-bold">
              <h4>{{this.name}}</h4>
            </div>
            <div>
              <small>{{ dateStyle this.date }}</small>
            </div>
          </td>

          <td class="align-middle text-right">
            <h4>
              {{this.amount}}
            </h4>
          </td>

          <td class="align-middle text-right">
            <div class="col-auto">
              <a class="text-reset m-1" href="./expense/{{ this._id }}/edit"><i class="fas fa-edit fa-lg"></i></a>

              <form action="./expense/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
                <button type="submit">
                  <p class="text-reset m-1"><i class="fas fa-trash-alt fa-lg"></i></p>
                </button>
              </form>


            </div>
          </td>

        </tr>
        {{/each}}

      </tbody>
    </table>
  </div>

  <div class="d-flex justify-content-center">
    <a href="./expense/new" class="btn btn-warning">新增支出</button>
    </a>

  </div>