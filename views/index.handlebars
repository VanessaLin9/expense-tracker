<div class="container">

  <div class="d-flex justify-content-center align-items-center">

    <form action="/">
      <select class="form-select" name="filter" id="filter" aria-label="Default select">
        <option value="" selected>全部類別</option>
        <option value="home">家居物業</option>
        <option value="shuttle">交通出行</option>
        <option value="entertain">休閒娛樂</option>
        <option value="food">餐飲食品</option>
        <option value="other">其他</option>
      </select>

      <select class="form-select ml-1" name="month" id="month"  aria-label="Default select">
        <option value="" selected>請選擇月份</option>
        <option value="1">1月</option>
        <option value="2">2月</option>
        <option value="3">3月</option>
        <option value="4">4月</option>
        <option value="5">5月</option>
        <option value="6">6月</option>
        <option value="7">7月</option>
        <option value="8">8月</option>
        <option value="9">9月</option>
        <option value="10">10月</option>
        <option value="11">11月</option>
        <option value="12">12月</option>
      </select>
      <button type="submit" class="btn btn-secondary ml-3">搜尋</button>
    </form>

    <a href="/" type="button" class="btn btn-secondary ml-3">返回搜尋結果</a>
  </div>

  <div class="d-flex justify-content-center mt-4">
    <h1>總金額:</h1>
    <h1>{{totalAmount}}</h1>
  </div>

  <div class="d-flex justify-content-center">
    <table class="table table-striped table-borderless">
      <thead>
        <tr>
          <th scope="col" class="invisible">First</th>
          <th scope="col" class="invisible">Last</th>
          <th scope="col" class="invisible">Handle</th>
        </tr>
      </thead>

      <tbody>

        {{#each records}}
        <tr>
          {{!-- <th scope="row">1</th> --}}
          <td class="align-middle">
            <div class="font-weight-bold">
              {{{ this.category.icon }}}
            </div>
          </td>

          <td>
            <div class="font-weight-bold">
              <h4>{{this.name}}</h4>
            </div>
            <div>
              <small>{{ dateStyle this.date }}</small>
            </div>
          </td>

          <td class="align-middle ">
            <h4>
              {{this.merchant}}
            </h4>
          </td>

          <td class="align-middle text-right">
            <h4>
              {{this.amount}}
            </h4>
          </td>

          <td class="align-middle text-right">
            <div class="col-auto">
              <a class="text-reset m-1" href="./record/{{ this._id }}/edit"><i class="fas fa-edit fa-lg"></i></a>

              <form action="./record/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
                <button type="submit">
                  <p class="text-reset m-1"><i class="fas fa-trash-alt fa-lg"></i></p>
                </button>
              </form>


            </div>
          </td>

        </tr>
        {{/each}}

      </tbody>
    </table>
  </div>

  <div class="d-flex justify-content-center">
    <a href="./record/new" class="btn btn-warning">新增支出</button>
    </a>

  </div>